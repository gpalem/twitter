<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.twitter.activities.FollowersActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivFollowPhoto"
        android:src="@android:drawable/screen_background_light_transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/tvFollowUser"
        android:paddingLeft="20sp"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFollowPhoto"
        android:layout_toEndOf="@+id/ivFollowPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Name"
        android:paddingLeft="20sp"
        android:textSize="10sp"
        android:textColor="@color/colorGray"
        android:id="@+id/tvFollowScreenName"
        android:layout_below="@+id/tvFollowUser"
        android:layout_toRightOf="@+id/ivFollowPhoto"
        android:layout_toEndOf="@+id/ivFollowPhoto" />
</RelativeLayout>
